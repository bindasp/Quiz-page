generator client {
  provider = "prisma-client-js"
  output = "../node_modules/@prisma/clientMongo"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model QuizMongo{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  category Int[]
  questions Question[]
}

type Question{
  question String
  answers  Answer[]
}

type Answer{
  answer String
  isCorrect Boolean
}

@@collection("Quiz")