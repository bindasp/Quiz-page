generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Category{
  brak
  sport
  informatyka
  geografia
  filmy
}

model Quiz{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  category Category
  questions Question[]
}

type Question{
  question String
  correctAnswers String[]
  incorrectAnswers String[]
}


